    "create:arb": "npx hardhat run scripts/create-arb-opportunity.ts --network localhost",
    "arb:scan:v3": "npx hardhat run scripts/arb-scan-v3.ts --network localhost",
    "deploy:enhanced": "npx hardhat run scripts/deploy-enhanced-arb.ts --network localhost",
    "execute:triangle": "npx hardhat run scripts/execute-triangle-arb.ts --network localhost",
    "reduce:profit": "npx hardhat run scripts/reduce-min-profit.ts --network localhost",
    "increase:imbalance": "npx hardhat run scripts/create-arb-opportunity.ts --network localhost -- imbalance=10",
    "careful:arb": "npx hardhat run scripts/careful-arb-fixed.ts --network localhost",
    "triangle:imbalance": "npx hardhat run scripts/create-triangle-imbalance.ts --network localhost",
    "direct:arb": "npx hardhat run scripts/create-direct-arbitrage.ts --network localhost",
    "execute:direct": "npx hardhat run scripts/execute-direct-arb.ts --network localhost",
    "test:enhanced": "npx hardhat run scripts/test-enhanced-system.ts --network localhost",
    "arb:scan:curve": "npx hardhat run scripts/arb-scan-curve.ts --network localhost",
    "arb:scan:universal": "npx hardhat run scripts/arb-scan-universal.ts --network localhost",
    "test:price-feed": "npx hardhat run scripts/test-price-feed.ts --network localhost",
    "deploy:multi-dex-arb": "npx hardhat run scripts/deploy-multi-dex-arb.ts --network localhost",
    "execute:multi-dex-arb": "npx hardhat run scripts/execute-multi-dex-arb.ts --network localhost",
    "deploy:multi-dex-sim": "npx hardhat run scripts/deploy-multi-dex-simulation.ts --network localhost",
    "multi-dex:all": "node scripts/manage-node.js & timeout 5 && npm run deploy:multi-dex-sim && start /B npm run arb:scan:universal && npm run dashboard"
