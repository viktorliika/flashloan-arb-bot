{
  "name": "flashloan-arb-bot",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "test:basic": "npx hardhat test test/basic-test.ts",
    "deploy:goerli": "npx hardhat run scripts/deploy.ts --network goerli",
    "arb:scan": "npx hardhat run scripts/arbitrage.ts --network goerli",
    "dashboard": "node dashboard/server.js",
    "analytics": "node dashboard/server.js --analytics",
    "verify": "npx hardhat verify --network goerli",
    "clean": "npx hardhat clean",
    "node": "node scripts/manage-node.js",
    "node:hardhat": "npx hardhat node",
    "deploy:sim": "npx hardhat run scripts/deploy-simulation.ts --network localhost",
    "arb:scan:local": "npx hardhat run scripts/arb-scan-local.ts --network localhost",
    "test:sim": "npx hardhat run scripts/test-simulation.ts --network localhost",
    "simulate:win": "node scripts/manage-node.js & timeout 5 && npm run deploy:sim && start /B npm run arb:scan:local && npm run dashboard",
    "simulate:unix": "node scripts/manage-node.js & sleep 5 && npm run deploy:sim && npm run arb:scan:local & npm run dashboard",
    "simulate": "node scripts/manage-node.js & timeout 5 && npm run deploy:sim",
    "dev": "concurrently \"npm run arb:scan\" \"npm run dashboard\"",
    "fork": "npx hardhat node --network hardhat",
    "deploy:fork": "npx hardhat run scripts/deploy-fork.ts --network localhost",
    "arb:scan:fork": "npx hardhat run scripts/arb-scan-fork.ts --network localhost",
    "test:fork": "npx hardhat test test/fork-test.ts --network localhost",
    "fork:all:win": "start /B npm run fork && timeout 10 && npm run deploy:fork && start /B npm run arb:scan:fork && npm run dashboard",
